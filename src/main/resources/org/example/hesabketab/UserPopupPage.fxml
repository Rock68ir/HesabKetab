<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
      prefWidth="800.0" style="-fx-background-color: #fff; -fx-background-radius: 10;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.hesabketab.UserPopupPageController">
   <padding>
      <Insets bottom="35.0" left="35.0" right="35.0" top="35.0"/>
   </padding>
   <Label alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="37.0" prefWidth="530.0"
          text="Employee Information" textAlignment="CENTER">
      <font>
         <Font name="Arial Black" size="16.0"/>
      </font>
   </Label>
   <HBox prefHeight="24.0" prefWidth="550.0">
      <Label text="Full Name">
         <font>
            <Font name="Arial Black" size="14.0"/>
         </font>
      </Label>
   </HBox>
   <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="60.0" prefWidth="600.0">
      <opaqueInsets>
         <Insets right="30.0"/>
      </opaqueInsets>
      <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="61.0" prefWidth="365.0">
         <MFXTextField fx:id="employeeFirstField" allowEdit="false" borderGap="5.0" caretVisible="false"
                       floatMode="BORDER" floatingText="Firstname" floatingTextGap="10.0" maxHeight="-Infinity"
                       maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0"
                       prefWidth="234.0"/>
      </HBox>
      <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="61.0" prefWidth="242.0">
         <children>
            <MFXTextField fx:id="employeeLastField" allowEdit="false" borderGap="5.0" caretVisible="false"
                          floatMode="BORDER" floatingText="Lastname" maxHeight="-Infinity" maxWidth="-Infinity"
                          minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="234.0"
                          HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets/>
               </HBox.margin>
            </MFXTextField>
         </children>
      </HBox>
   </HBox>
   <HBox prefHeight="24.0" prefWidth="550.0">
      <Label text="General Information">
         <font>
            <Font name="Arial Black" size="14.0"/>
         </font>
         <HBox.margin>
            <Insets/>
         </HBox.margin>
      </Label>
   </HBox>
   <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="60.0" prefWidth="600.0">
      <opaqueInsets>
         <Insets right="30.0"/>
      </opaqueInsets>
      <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="61.0" prefWidth="365.0">
         <MFXComboBox fx:id="GenderComboBox" floatMode="BORDER" floatingText="Gender" maxHeight="-Infinity"
                      maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                      prefHeight="35.0" prefWidth="233.0"/>
      </HBox>
      <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="61.0" prefWidth="242.0">
         <children>
            <MFXTextField fx:id="employeeNationalIDField" allowEdit="false" borderGap="5.0" caretVisible="false"
                          floatMode="BORDER" floatingText="NationalID" maxHeight="-Infinity" maxWidth="-Infinity"
                          minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="229.0"
                          textLimit="10"/>
         </children>
      </HBox>
   </HBox>
   <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="60.0" prefWidth="600.0">
      <opaqueInsets>
         <Insets right="30.0"/>
