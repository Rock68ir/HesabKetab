                        floatMode="BORDER" prefHeight="38.0" prefWidth="234.0" promptText="Pick your Birthday..."
                        selectable="false"/>
      </HBox>
      <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="61.0" prefWidth="242.0">
         <MFXTextField fx:id="employeeStateField" allowEdit="false" borderGap="5.0" caretVisible="false"
                       floatMode="BORDER" floatingText="Current State" maxHeight="-Infinity" maxWidth="-Infinity"
                       minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="229.0"
                       textLimit="10"/>
      </HBox>
   </HBox>
   <MFXPaginatedTableView fx:id="paginatedSalary" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                          minHeight="-Infinity" VBox.vgrow="ALWAYS"/>
   <MFXButton fx:id="LoadUserBtn" alignment="CENTER" buttonType="RAISED" maxWidth="1.7976931348623157E308"
              minHeight="-Infinity" minWidth="-Infinity" onAction="#LoadUserBtnClicked" prefHeight="43.0"
              prefWidth="202.0" rippleAnimateShadow="true" rippleColor="#3d52a0"
              style="-fx-background-radius: 10; -fx-background-color: #141619; -fx-text-fill: fff;" text="Load User"
              textAlignment="CENTER">
      <font>
         <Font name="Arial Black" size="14.0"/>
      </font>
   </MFXButton>
</VBox>
